{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "types": ["vite/client", "vitest"],
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/services/*": ["src/services/*"],
      "@/types": ["src/types.ts"],
      "@/context/*": ["src/context/*"],
      "@/routes/*": ["src/routes/*"],
      "@/pages/*": ["src/pages/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}
